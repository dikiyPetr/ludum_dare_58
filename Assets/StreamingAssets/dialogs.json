        },
        {
          "id": "4",
          "text": "Yes, I swear on my mother, you won't remember me",
          "notebookEntries": [],
          "highlights": [],
          "options": [
            {
              "text": "But we'll have to take a little ride.",
              "nextNodeId": "_dialogue_0:release"
